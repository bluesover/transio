{
  "appId": "org.transio.app",
  "productName": "Transio",
  "copyright": "Copyright Â© 2024 Transio",
  "directories": {
    "output": "dist-desktop",
    "buildResources": "desktop-resources"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "server/**/*",
    "!server/node_modules",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "server",
      "to": "server",
      "filter": ["**/*", "!node_modules"]
    }
  ],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "category": "public.app-category.developer-tools",
    "icon": "desktop-resources/icons/icon.icns",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "desktop-resources/entitlements.mac.plist",
    "entitlementsInherit": "desktop-resources/entitlements.mac.plist",
    "publish": {
      "provider": "github",
      "owner": "bluesover",
      "repo": "transio.org"
    }
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "desktop-resources/icons/icon.ico",
    "publish": {
      "provider": "github",
      "owner": "bluesover",
      "repo": "transio.org"
    }
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Transio",
    "perMachine": false,
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "portable": {
    "artifactName": "${productName}-Portable-${version}.${ext}"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      }
    ],
    "category": "Development",
    "icon": "desktop-resources/icons",
    "synopsis": "Professional XML to XSLT transformation tool",
    "description": "Transio is a free, open-source XML/XSLT transformer supporting XSLT 1.0, 2.0, and 3.0 with version control, project management, and comprehensive developer tools.",
    "publish": {
      "provider": "github",
      "owner": "bluesover",
      "repo": "transio.org"
    }
  },
  "appImage": {
    "artifactName": "${productName}-${version}.${ext}"
  },
  "deb": {
    "artifactName": "${productName}_${version}_${arch}.${ext}",
    "depends": ["libgtk-3-0", "libnotify4", "libnss3", "libxtst6", "xdg-utils"]
  },
  "rpm": {
    "artifactName": "${productName}-${version}.${arch}.${ext}",
    "depends": ["gtk3", "libnotify", "nss", "libXtst", "xdg-utils"]
  },
  "publish": {
    "provider": "github",
    "owner": "bluesover",
    "repo": "transio.org",
    "releaseType": "release"
  }
}
